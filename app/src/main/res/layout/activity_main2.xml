<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/Main2_textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Whack A Mole Game"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Main2_textViewTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="By:Kushaal Latupalli"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/Main2_textViewTitle"
        app:layout_constraintStart_toStartOf="@+id/Main2_textViewTitle"
        app:layout_constraintTop_toBottomOf="@+id/Main2_textViewTitle" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/Main2_textViewTitle2"
        app:layout_constraintStart_toStartOf="@+id/Main2_textViewTitle2"
        app:layout_constraintTop_toBottomOf="@+id/Main2_textViewTitle2"
        app:srcCompat="@drawable/molehammer" />

    <Button
        android:id="@+id/Main2_GameStartButton"
        android:layout_width="139dp"
        android:layout_height="66dp"
        android:text="Start"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>